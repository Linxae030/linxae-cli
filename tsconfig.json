{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": "./",
        "types": ["node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["lib/*"]
        }
    },
    "include": ["lib/**/*", "global.d.ts"]
    // "exclude": ["node_modules"]
}
